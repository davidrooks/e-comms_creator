<form method="post" action="/create">
  <input type="hidden" value="2" name="step"/>
  <input type="hidden" value="<%= @id %>" name="elem_id" id="elem_id"/>
  <button type="submit" class="btn btn-default" id="save_ecomm">Create</button>
  <div id="content" style="border:1px solid black; width:800px;">
    <% @items.each do |i| %>
        <img id="<%= i[:_id] %>" class="makeMeDraggable" src="<%= i[:imageURL] %>"/>
    <% end %>
  </div>
</form>
<script type="text/javascript">

    $(document).ready(function () {
        $("#save_ecomm").click(function () {
            console.log('create button clicked');
            $("img").each(function (index) {
                var elem_id = $("#elem_id ").val();
                var position = $(this).position();
                var id = $(this).attr("id");
                console.log("ecomm - " + elem_id)
                console.log(index + " - left: " + position.left + ", top: " + position.top)
                $.post("/ecomm/item/savePos", {ecomm: elem_id, id: id, x: position.left, y: position.top});
            })
        });
    });

    $(init);

    function init() {
        $('.makeMeDraggable').draggable({
            cursor: 'move',
            containment: 'content',
            snap: true
        });
    }

</script>

